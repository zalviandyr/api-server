{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": "off",
    "indent": ["error", 4],
    "max-len": "off",
    "no-labels": "off",
    "prefer-destructuring": "off",
    "prefer-template": "off",
    "no-plusplus": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["cores", "./core"],
          ["configs", "./configs"],
          ["controllers", "./app/controllers"],
          ["routes", "./app/routes"],
          ["helpers", "./app/helpers"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json"]
      }
    }
  }
}
